{
  "manifest_version": 3,
  "name": "ResearchMate",
  "version": "0.1.0",
  "description": "Save and organize research highlights with AI-powered tools",
  "action": {
    "default_title": "ResearchMate",
    "default_popup": "scr/UI/popup/popup.html",
    "default_icon": {
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "scr/background/background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://firebasestorage.googleapis.com https://*.googleapis.com https://api.openai.com;"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scr/content/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "optional_permissions": ["clipboardWrite"]
}
