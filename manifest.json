{
  "manifest_version": 3,
  "name": "ResearchMate",
  "version": "0.1.0",
  "action": {
    "default_title": "ResearchMate",
    "default_popup": "scr/UI/popup/popup.html"
  },
  "background": {
    "service_worker": "scr/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scr/content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "scr/UI/options/option.html",
  "icons": {
    "128": "assets/icon128.png"
  },
  "permissions": ["storage", "activeTab", "contextMenus", "scripting"],
  "host_permissions": ["<all_urls>"]
}
